/**index.wxss**/

.container {
  padding: 50rpx 0;
  height: 74vh;
}

.text {
  font-size: 40rpx;
}

.Ttext {
  float: right;
  height: 20px;
  font-size: 40rpx;
}

.titleText {
  font-size: 40rpx;
}

.typeText {
  float: right;
  margin-top: 28px;
  margin-right: 6px;
  height: 30vh;
  width: 70vw;
  border: 1px solid rgb(207, 207, 207);
  box-shadow: 0px 0px 4px #dfdfdf;
  border-radius: 4%;
}

.currentText {
  padding: 2px;
  float: left;
  margin-left: 4px;
  height: 7vh;
  width: 70vw;
  border: 1px solid rgb(207, 207, 207);
  box-shadow: 0px 0px 4px #dfdfdf;
  border-radius: 10px;
}

.listenBtn {
  margin-top: 7vh;
  margin-left: 40%;
  padding-right: 3PX;
  margin-bottom: 20rpx;
  width: 20%;
  height: 20%;
  border: 1px solid rgb(223, 223, 223);
  border-radius: 50%;
  box-shadow: 0px 0px 4px #d3d3d3;
}

.btnText {
  margin-top: 2px;
  margin-left: 30%;
}

.topImage {
  width: 100%;
}

.QImage {
  float: left;
  margin-left: 4px;
  width: 13%;
  height: 13%;
}

.AImage {
  float: right;
  margin-top: 90px;
  margin-right: 4px;
  width: 13%;
  height: 13%;
}

.aImage {
  border-radius: 50%;
}

.typeImage {
  position: relative;
  bottom: 0;
  margin-left: 150rpx;
  margin-top: 40rpx;
  width: 200rpx;
  height: 400rpx;
}

input {
  margin: 5rpx 0 20rpx;
  height: 2.1em;
  font-size: 35rpx;
  width: 100%;
  line-height: 1.2em;
  flex: 1;
  padding: 0;
}
